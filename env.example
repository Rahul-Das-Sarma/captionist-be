# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/captionist
REDIS_URL=redis://localhost:6379

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=500MB
ALLOWED_VIDEO_TYPES=mp4,avi,mov,webm,mkv

# Video Processing (auto-detected on Windows)
# FFMPEG_PATH=auto-detected
# FFPROBE_PATH=auto-detected
TEMP_DIR=./temp

# API Keys (Optional)
OPENAI_API_KEY=your_openai_key
GOOGLE_CLOUD_API_KEY=your_google_key
AZURE_SPEECH_KEY=your_azure_key

# Security
JWT_SECRET=your_jwt_secret
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
